<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>magnetos.ac</path>
  
  <animation>
    <object-name>fond</object-name>
    <object-name>manetteL</object-name>
    <object-name>manetteR</object-name>
    
    <object-name>increaseL</object-name>
    <object-name>decreaseL</object-name>
    <object-name>increaseR</object-name>
    <object-name>decreaseR</object-name>
  </animation>
  
  <!-- Moteur gauche -->
  <animation>
    <type>pick</type>
    <visible>false</visible>
    <object-name>increaseL</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine[0]/magnetos</property>
        <step>1</step>
        <min>0</min>
        <max>3</max>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/sound/click</property>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>pick</type>
    <visible>false</visible>
    <object-name>decreaseL</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine[0]/magnetos</property>
        <step>-1</step>
        <min>0</min>
        <max>3</max>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/sound/click</property>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>manetteL</object-name>
    <property>controls/engines/engine[0]/magnetos</property>
    <factor> -30 </factor>
    <center>
      <x-m>  0.009167 </x-m>
      <y-m> -0.021280 </y-m>
      <z-m> -0.007035 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <!-- Moteur droit -->
  <animation>
    <type>pick</type>
    <visible>false</visible>
    <object-name>increaseR</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine[1]/magnetos</property>
        <step>1</step>
        <min>0</min>
        <max>3</max>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/sound/click</property>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>pick</type>
    <visible>false</visible>
    <object-name>decreaseR</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine[1]/magnetos</property>
        <step>-1</step>
        <min>0</min>
        <max>3</max>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/sound/click</property>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>manetteR</object-name>
    <property>controls/engines/engine[1]/magnetos</property>
    <factor> 30 </factor>
    <center>
      <x-m>  0.009167 </x-m>
      <y-m>  0.021280 </y-m>
      <z-m> -0.007035 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
</PropertyList>
