<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <path>flapgear.ac</path>

  <animation>
    <!-- Objects Opaques -->
    <object-name>fond</object-name>
    <object-name>FlapGear.face</object-name>
    <object-name>Lgear.needle</object-name>
    <object-name>Rgear.needle</object-name>
    <object-name>Cgear.needle</object-name>
    <object-name>Flap.needle</object-name>

    <!-- Objects Transparents -->
    <object-name>vitre</object-name>
  </animation>
  
  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/XP-67/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>Flap.needle</object-name>
    <object-name>Lgear.needle</object-name>
    <object-name>Rgear.needle</object-name>
    <object-name>Cgear.needle</object-name>
    <object-name>FlapGear.face</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Flap.needle</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor> -90 </factor>
    <center>
      <x-m>  0.00000 </x-m>
      <y-m> -0.00059 </y-m>
      <z-m>  0.02851 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Lgear.needle</object-name>
    <property>gear/gear[0]/position-norm</property>
    <factor> 90 </factor>
    <center>
      <x-m>  0.00000 </x-m>
      <y-m> -0.01353 </y-m>
      <z-m> -0.00168 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Rgear.needle</object-name>
    <property>gear/gear[1]/position-norm</property>
    <factor> -90 </factor>
    <center>
      <x-m>  0.00000 </x-m>
      <y-m>  0.01310 </y-m>
      <z-m> -0.00181 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Cgear.needle</object-name>
    <property>gear/gear[2]/position-norm</property>
    <factor> 90 </factor>
    <center>
      <x-m>  0.00000 </x-m>
      <y-m>  0.00093 </y-m>
      <z-m> -0.02230 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
